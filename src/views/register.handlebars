{{> menu }}
<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow-sm border-0 bg-dark text-white">
        <div class="card-header bg-black text-center">
          <h2 class="fw-bold mb-0">Registrarse</h2>
        </div>
        <div class="card-body">
          <form action="/register" method="POST">

            <!-- Nombre -->
            <div class="mb-3">
              <label for="name" class="form-label">Nombre completo</label>
              <input type="text" name="name" class="form-control bg-secondary text-white border-0" id="reg-username" required>
            </div>

            <!-- Ciudad -->
            <div class="mb-3">
              <label for="city" class="form-label">Ciudad</label>
              <input type="text" name="city" class="form-control bg-secondary text-white border-0" id="reg-city" required>
            </div>

            <!-- Email -->
            <div class="mb-3">
              <label for="email" class="form-label">Correo electrónico</label>
              <input type="email" name="email" class="form-control bg-secondary text-white border-0" id="reg-email" required>
            </div>

            <!-- Contraseña -->
            <div class="mb-3">
              <label for="password" class="form-label">Contraseña</label>
              <input type="password" name="password" class="form-control bg-secondary text-white border-0" id="reg-password" required>
            </div>

            <!-- Botón de registro -->
            <button type="submit" id="submit-button" class="btn btn-primary w-100 mt-3">
              <i class="fas fa-user-plus me-2"></i> Registrarme
            </button>
          </form>
        </div>
        <div class="card-footer bg-black text-center">
          <p class="mb-0">¿Ya tienes cuenta? <a href="/login" class="text-decoration-none text-primary">Inicia sesión</a></p>
        </div>
      </div>
    </div>
  </div>
</div>
<script type="module" src="/scripts/register.js"></script>